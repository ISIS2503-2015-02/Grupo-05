# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                            controllers.Application.index()
POST    /person                                     controllers.Application.addPerson()
GET     /persons                                      controllers.Application.getPersons
DELETE  /persons                                         controllers.Application.deletePersons()
POST    /vehiculos/:id/posiciones/agregar               controllers.VehiculoController.agregarPosicion(id: Long)
POST    /clientes/:id/reservas/crear                    controllers.ClienteController.crearReserva(id: Long)
DELETE /clientes/:idCliente/reservas/eliminar/:idReserva    controllers.ClienteController.cancelarReserva(idCliente: Long,idReserva: Long)
POST    /clientes/:idCliente/prestamos/alquilar                 controllers.ClienteController.alquilarVcub(idCliente: Long)
#PUT     /clientes/:id/prestamos/devolver                    controllers.ClienteController.devolverVcub(id: Long)
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
